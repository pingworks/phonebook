{
  "apiVersion": "v1",
  "spec": {
        "containers": [
          {
            "name": "phonebook-build",
            "image": "kube-registry.kube-system.svc.cluster.local:5000/ruby-phonebook:a34121390db3",
            "args": [
              "/src/phonebook-build/kubernetes/build-and-test.sh",
              "__PKG__",
              "__VERSION__"
            ],
            "volumeMounts": [{
              "mountPath": "/src",
              "name": "jenkins-workspace"
            }]
          }
        ],
        "volumes": [{
          "name":"jenkins-workspace",
          "persistentVolumeClaim": {
            "claimName": "pvc-jenkins-workspace"
          }
        }]
  }
}
